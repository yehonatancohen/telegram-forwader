# ─── Telegram ────────────────────────────────────────────
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
PHONE_NUMBER=

# Session: use StringSession (generated by gen_session.py) — no files needed
TG_SESSION_STRING=
# Fallback: file-based session (only if TG_SESSION_STRING is empty)
SESSION_NAME=arab-ai

# ─── Output channels ────────────────────────────────────
ARABS_SUMMARY_OUT=
SMART_CHAT=

# ─── Source files ────────────────────────────────────────
ARAB_SOURCES_FILE=arab_channels.txt
SMART_SOURCES_FILE=smart_channels.txt

# ─── Gemini AI ───────────────────────────────────────────
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash
LLM_BUDGET_HOURLY=120
LLM_RPM_LIMIT=14

# ─── Batching ────────────────────────────────────────────
BATCH_SIZE=24
MAX_BATCH_AGE=300
MEDIA_THRESHOLD=3
SUMMARY_MIN_INTERVAL=300

# ─── Correlation ─────────────────────────────────────────
SIGNATURE_MATCH_THRESHOLD=0.5
EVENT_MERGE_WINDOW=600
FLUSH_EVERY=120
MIN_SOURCES=2

# ─── Authority ───────────────────────────────────────────
AUTHORITY_HIGH_THRESHOLD=75
AUTHORITY_SMART_DEFAULT=70
AUTHORITY_ARAB_DEFAULT=50

# ─── Database ────────────────────────────────────────────
DB_PATH=data/intel.db

# ─── Multi-account readers ───────────────────────────────
TG_READERS_JSON=[]

# ─── Companion bot (remote session renewal) ──────────────
# Create a bot via @BotFather, paste the token here.
# ADMIN_ID is your personal Telegram user ID (send /start to @userinfobot).
BOT_TOKEN=
ADMIN_ID=
